{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-native",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",  // Necessário para resolver os módulos a partir da raiz do projeto
    "paths": {
      "*": ["src/*"]
    }
},

"include": [
  "src/**/*.ts",
  "src/**/*.tsx",
  "test/**/*.ts",
  "test/**/*.tsx"
]
}
